<section class="section">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-header-title">
          <%= link_to post.title, post %>
        </div>

        <div class="card-content">
          <%= post.content %>
        </div>
      </div>
    <% end %>
  </div>
</section>